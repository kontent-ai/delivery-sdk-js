{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "paths": {
      "*": [
        "*",
        "definitions/*"
      ],
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include": [
    "lib/**/*",
    "spec/**/*"
  ],
  "exclude": [
    "node_modules",
    "dev-test"
  ]
}